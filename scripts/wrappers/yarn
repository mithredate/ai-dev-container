#!/bin/sh
# shellcheck shell=dash
# yarn wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge yarn "$@"
else
    # Find the real yarn binary (skip this wrapper)
    SELF=$(command -v yarn)
    for BIN in /usr/local/bin/yarn /usr/bin/yarn; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: yarn not found (BRIDGE_ENABLED not set and no local yarn installation)" >&2
    exit 127
fi

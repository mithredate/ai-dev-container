#!/bin/sh
# shellcheck shell=dash
# rake wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge rake "$@"
else
    # Find the real rake binary (skip this wrapper)
    SELF=$(command -v rake)
    for BIN in /usr/local/bin/rake /usr/bin/rake; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: rake not found (BRIDGE_ENABLED not set and no local rake installation)" >&2
    exit 127
fi

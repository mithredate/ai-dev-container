#!/bin/sh
# shellcheck shell=dash
# python wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge python "$@"
else
    # Find the real python binary (skip this wrapper)
    SELF=$(command -v python)
    for BIN in /usr/local/bin/python /usr/bin/python /usr/local/bin/python3 /usr/bin/python3; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: python not found (BRIDGE_ENABLED not set and no local python installation)" >&2
    exit 127
fi

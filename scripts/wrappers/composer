#!/bin/sh
# shellcheck shell=dash
# Composer wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge composer "$@"
else
    # Find the real composer binary (skip this wrapper)
    SELF=$(command -v composer)
    for BIN in /usr/local/bin/composer /usr/bin/composer; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: composer not found (BRIDGE_ENABLED not set and no local composer installation)" >&2
    exit 127
fi

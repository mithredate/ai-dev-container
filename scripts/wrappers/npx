#!/bin/sh
# shellcheck shell=dash
# npx wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge npx "$@"
else
    # Find the real npx binary (skip this wrapper)
    SELF=$(command -v npx)
    for BIN in /usr/local/bin/npx /usr/bin/npx; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: npx not found (BRIDGE_ENABLED not set and no local npx installation)" >&2
    exit 127
fi

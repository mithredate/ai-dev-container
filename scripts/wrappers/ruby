#!/bin/sh
# shellcheck shell=dash
# ruby wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge ruby "$@"
else
    # Find the real ruby binary (skip this wrapper)
    SELF=$(command -v ruby)
    for BIN in /usr/local/bin/ruby /usr/bin/ruby; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: ruby not found (BRIDGE_ENABLED not set and no local ruby installation)" >&2
    exit 127
fi

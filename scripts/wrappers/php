#!/bin/sh
# shellcheck shell=dash
# PHP wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge php "$@"
else
    # Find the real php binary (skip this wrapper)
    SELF=$(command -v php)
    for BIN in /usr/local/bin/php /usr/bin/php; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: php not found (BRIDGE_ENABLED not set and no local php installation)" >&2
    exit 127
fi

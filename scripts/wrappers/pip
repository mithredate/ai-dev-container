#!/bin/sh
# shellcheck shell=dash
# pip wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge pip "$@"
else
    # Find the real pip binary (skip this wrapper)
    SELF=$(command -v pip)
    for BIN in /usr/local/bin/pip /usr/bin/pip /usr/local/bin/pip3 /usr/bin/pip3; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: pip not found (BRIDGE_ENABLED not set and no local pip installation)" >&2
    exit 127
fi

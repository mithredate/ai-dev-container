#!/bin/sh
# shellcheck shell=dash
# rails wrapper - routes to sidecar container via bridge when BRIDGE_ENABLED=1

if [ "$BRIDGE_ENABLED" = "1" ]; then
    exec bridge rails "$@"
else
    # Find the real rails binary (skip this wrapper)
    SELF=$(command -v rails)
    for BIN in /usr/local/bin/rails /usr/bin/rails; do
        if [ -x "$BIN" ] && [ "$BIN" != "$SELF" ]; then
            exec "$BIN" "$@"
        fi
    done
    echo "Error: rails not found (BRIDGE_ENABLED not set and no local rails installation)" >&2
    exit 127
fi
